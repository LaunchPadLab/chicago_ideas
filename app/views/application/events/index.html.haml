-# 		Chicago Ideas Week
-# 		events/index.html.haml
-# 		01/10/2012


-# Featured Section/Banner Area
= render "application/events/banner"


%section{:id => "main_content", :class => "row full"}
	.container
		
		.span-one-third.entry_column.general_#ciw_talks
		
			%h2 CIW Talks
			
			- !@talks.nil?
				
				%ul{:class => "entry_list"}
				
					- @talks.limit(3).each do |talk|
				
					%li{:class => "entry", :id => "entry_#{talk.id}"}
						.img_wrapper= link_to image_tag(asset_path "application/temp/blog_thumb.jpg", :width => "300"), "#"
						%h3= link_to talk.name, talk_path(talk)
						%p= talk.track.name

		
		
		.span-one-third.entry_column.general_#mega_talks
		
			%h2 Mega Talks
			
			- !@megatalks.nil?
			
				%ul{:class => "entry_list"}
			
					- @megatalks.limit(3).each do |megatalk|
				
					%li{:class => "entry", :id => "entry_#{megatalk.id}"}
						%h3= link_to megatalk.name, talk_path(megatalk)
						.img_wrapper= link_to image_tag(asset_path "application/temp/blog_thumb.jpg"), "#"
						%p= megatalk.description[0..105]
				
				
			
		.span-one-third.entry_column.general_#ciw_labs
			
			%h2 CIW Labs
			
			- !@labs.nil?
			
				%ul{:class => "entry_list"}

					- @labs.limit(3).each do |lab|
				
					%li{:class => "entry", :id => "entry_#{lab.id}"}
						%h3= link_to lab.name, event_lab_path(lab)
						.img_wrapper= link_to image_tag(asset_path "application/temp/blog_thumb.jpg"), "#"
						%p= lab.description[0..105]
							


<script type="text/javascript">
$('#gn-event').addClass('nav_parent_active'); // show the 2012 CIW sub menu by default
</script>		
			
	
	
