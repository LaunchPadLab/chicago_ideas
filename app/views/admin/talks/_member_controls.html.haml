  %ul
    %li{:class => active_for('show')}= icon_link_to "Detail", admin_talk_path(@talk), 'circle-zoomin'
    %li{:class => active_for('notes')}= icon_link_to "Notes", notes_admin_talk_path(@talk), 'comment'
