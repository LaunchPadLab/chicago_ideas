- content_for :breadcrumbs do
  = breadcrumbs @talk
  .crumb.end= section_title   

- content_for :top_links do
  = new_model_link Note, @talk


- content_for :content_navigation do
  %h2 Talks
  %ul
    %li{:class => active_for('index')}= icon_link_to "Search", admin_talks_path, 'search'
