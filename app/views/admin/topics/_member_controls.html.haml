- content_for :breadcrumbs do
  = breadcrumbs @topic
  .crumb.end= section_title   

- content_for :top_links do
  = new_model_link Note, @topic

- @active_tab = 'topics'

- content_for :content_navigation do
  %h2 Topics
  %ul
    %li{:class => active_for('index')}= icon_link_to "Search", admin_topics_path, 'search'
  %h2= @topic.name
  %ul
    %li{:class => active_for('show')}= icon_link_to "Detail", admin_topic_path(@topic), 'circle-zoomin'
    %li{:class => active_for('notes')}= icon_link_to "Notes", notes_admin_topic_path(@topic), 'comment'
