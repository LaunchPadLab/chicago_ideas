-# Breadcrumbs and Explore button
%section#header_toolbar.container-fluid
  .container
    #breadcrumbs
      %ul
        %li= link_to "Home", "/"
        %li= link_to "Speakers", speakers_path
    = link_to "Explore Speakers", "#", :class => "explore_btn", :id => "explore_speakers"


-# Begin Main Speaker content
%section.container#main_content
  
  #page_header
    #page_title.left
      %h1 Speakers
    #page_share.right
      %ul
        %li#twitter_ <a href="https://twitter.com/share" class="twitter-share-button" data-via="chicagoideas" data-count="none" data-hashtags="ciwtalks">Tweet</a>
        -#%li#facebook_ <div class="fb-like" data-href="http://www.google.com" data-send="false" data-layout="button_count" data-show-faces="true"></div>
        %li#facebook_ <div class="fb-like" data-send="false" data-layout="button_count" data-show-faces="false"></div>
        %li#gplus_ <g:plusone size="medium" annotation="none"></g:plusone>
      
  
  -# Left column: Speakers List
  .box.double.left
    .column_row.speakers_filter
      .column.column_double
        %ul.filter_
          %li= link_to "A", "#"
          %li= link_to "B", "#"
          %li= link_to "C", "#"
          %li= link_to "D", "#"
          %li= link_to "E", "#"
          %li= link_to "F", "#"
          %li= link_to "G", "#"
          %li= link_to "H", "#"
          %li I
          %li= link_to "J", "#", :class => "active"
          %li= link_to "K", "#"
          %li= link_to "L", "#"
          %li= link_to "M", "#"
          %li= link_to "N", "#"
          %li= link_to "O", "#"
          %li= link_to "P", "#"
          %li Q
          %li= link_to "R", "#"
          %li= link_to "S", "#"
          %li= link_to "T", "#"
          %li= link_to "U", "#"
          %li= link_to "V", "#"
          %li= link_to "W", "#"
          %li X
          %li= link_to "Y", "#"
          %li= link_to "Z", "#"
          
    .column_row#speakers
      .column.column_double
        %ul.preview_list.speaker_list.double_rows
          - @speakers.each do |speaker|
            %li{:id => "speaker_#{speaker.id}", :class => "speaker_#{speaker.id}"}
              .img_frame
                - begin
                  = link_to image_tag(speaker.portrait.url), speaker_path(speaker)
                - rescue
              = link_to speaker.name, speaker_path(speaker)
              %span= speaker.title

  -# Include Sidebar Items
  -#= render "partials/track_filter"
  = render "partials/sponsors"
  = render "partials/newsletter_form"
  = render "partials/social"


