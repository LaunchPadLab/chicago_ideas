%section.container.form_container#main_content

  -# Left column with form
  .box.double.left

    .column_row#login_container
      %span.column_header Account Registration

      = link_to "Click here to Login with your Facebook Account", user_omniauth_authorize_path(:facebook), :class => 'facebook_connect'
      %br/
      %br/
      or create a new account below: 
      %br/
      %br/
      
      = semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
        = f.inputs do
          = f.input :name
          = f.input :email
          = f.input :password
          = f.input :password_confirmation

        .agreeing_to_terms 
          By creating an account, you are agreeing to our
          = link_to "Terms of Use", terms_path

        = f.buttons do
          = f.commit_button :label => "Create Account"

        = render "devise/shared/links"
